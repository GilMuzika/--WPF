<UserControl x:Class="WPF_Exercise_2.Part_3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Exercise_2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Validation.ErrorTemplate="{x:Null}">
    <StackPanel Width="700">
        <TextBlock x:Name="tblTitle"></TextBlock>
        <StackPanel Width="400" Margin="50">
            <TextBlock Margin="20,20,0,0">User name:</TextBlock>
        <TextBox x:Name="txtName" Margin="20,0,0,20" HorizontalContentAlignment="Center"></TextBox>
            <TextBlock Margin="20,0">Password:</TextBlock>
            <TextBox x:Name="txtPassword" Margin="20,0,0,20" HorizontalContentAlignment="Center"></TextBox>
        
        <Button Width="100" Click="Button_Click">Login</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
